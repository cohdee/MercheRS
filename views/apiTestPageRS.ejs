	<script src="/javascripts/items.js"></script>
	<script src="/javascripts/apiRequest.js"></script>
	<script src="/javascripts/jquery.easy-autocomplete.min.js"></script>
	
	<script>
		var $dataBox = $("#dataBox");
		
		var options = {
			url: '/javascripts/items.json',
			ajaxSettings: {
				dataType: "json"
			},
			getValue: 'name',
			theme: 'round',
			list: {
				maxNumberOfElements: 10,
				match: {
					enabled: true
				},
				sort: {
					enabled: false
				},
				onChooseEvent: function() {
					var itemID = $('#itemInput').getSelectedItemData().id;
					var itemName = $('#itemInput').getSelectedItemData().name;
					apiGetData(itemName, itemID, $dataBox);
					$("#itemInput").val('');
				},
			},
			template: {
				type: "custom",
				method: function(value, item) {
					return "<img src='http://cdn.rsbuddy.com/items/" + item.id + ".png' />" + value;
				}
			}
		};

		$("#itemInput").easyAutocomplete(options);
	</script>
